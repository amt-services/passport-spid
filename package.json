    "saml",
    "saml2",
    "authentication",
    "italia",
    "italy"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src/**"
  ],
  "scripts": {
    "dev": "ts-node-dev --poll --respawn --inspect=0.0.0.0:9229 -- test/main.ts test/config/.env",
