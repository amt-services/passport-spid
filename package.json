    "fs-extra": "^10.1.0",
    "ioredis": "^5.2.3",
    "jest": "^29.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "ts-jest": "^29.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^3.10.1",
    "type-fest": "^2.16.0",
    "typescript": "^4.8"
  }
