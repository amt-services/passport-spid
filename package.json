    "prepare": "run-s build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "bash test/test.sh"
  },
  "dependencies": {
    "@node-saml/node-saml": "^4.0.0",
